<%= render 'shared/navbar' %>

<div class = "containerd">

<div class= "containerposting">
<div class="btntitle">
<h1>Infos sur chien n°<%= @dog.id %>    </h1>
</div>
  <div class="containershowdog">


 
    <% if @dog.photo.attached?%>
     <div class="alignement">
      <%= cl_image_tag @dog.photo.key, height: 400, width: 500, crop: :fill %>
      <%=  link_to 'Retour', root_url , method: :get,  class: "generique" %>
      <%=  link_to 'Reserver', new_dog_booking_path(@dog) , method: :get,  class: "generique" %>
        <%# <% else %>
        <%# <% image_tag %>
        <br>
     </div>
    <% end %>
    <div class ="contentannonce">
    <strong>Nom</strong>
    <%= @dog.name %>
    <br>
    <strong>Race</strong>
    <%= @dog.race %>
    <br>
    <strong>Ville</strong>
    <%= @dog.location %>
    <br>
    <strong>Identifiant du propriétaire</strong>
    <%= @dog.user.id %>
    <br>
    <strong>Prix</strong>
    <%= @dog.price %> € / jour
    <br>
    <strong>Description</strong>
    <%= @dog.description %>
    <br>
    <strong>Avis sur le chien</strong> 
     <% @dog.reviews.each do |review| %>
     <li>Note : <%= review.rating %>/5 - "<%= review.comment %>" 
     <% end %>
     <br>
    </div>
  </div>
 </div>
</div>
  <%= render 'shared/footer' %>
